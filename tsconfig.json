{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "allowJs": false,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "node_modules",
        "package.json",
        "package-lock.json",
        "__tests__"
    ]
}
